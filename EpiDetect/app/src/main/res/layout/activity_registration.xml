<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="bottom"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/ButtonWidth"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/reg_title">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLight"
            android:text="EpiDetect"
            android:layout_marginLeft="12dp"
            android:textSize="23sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/fio"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reg_title"
        style="@style/StandartEditText"
        android:layout_centerHorizontal="true"
        android:hint="Surname Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/emgnum"
        style="@style/StandartEditText"
        android:layout_centerHorizontal="true"android:layout_below="@+id/fio"
        android:hint="Emergance number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/parnum"
        style="@style/StandartEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emgnum"
        android:hint="Номер родителя"
        android:inputType="phone" />

    <LinearLayout
        android:id="@+id/swt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parnum"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/dob"
        style="@style/StandartEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/swt"
        android:hint="Date of birth"
        android:inputType="date" />

    <EditText
        android:id="@+id/mail"
        android:layout_below="@id/dob"
        style="@style/StandartEditText"
        android:layout_centerHorizontal="true"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        style="@style/StandartEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mail"
        android:hint="Password"
        android:inputType="textPassword"/>
    <Button
        style="@style/RedButton"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        android:id="@+id/sign_up_btn"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <Button
        style="@style/DarkButton"
        android:layout_centerHorizontal="true"
        android:text="Sign in"
        android:id="@+id/sign_in_btn"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>